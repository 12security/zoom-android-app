<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/zm_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlSettingIndex" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/vpIndexer" android:layout_width="match_parent" android:layout_height="20dp" android:layout_centerVertical="true"/>
        <ImageButton android:id="@+id/btnSettings" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:src="@drawable/zm_btn_settings_wlc" android:layout_centerVertical="true" android:contentDescription="@string/zm_btn_settings" style="@style/ZMButton.TitleBar"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/panelActions" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="120dp" android:layout_marginBottom="120dp" android:layout_below="@+id/rlSettingIndex" android:layout_centerHorizontal="true">
        <androidx.viewpager.widget.ViewPager android:id="@+id/wlcViewpager" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/panelJoinBack"/>
        <FrameLayout android:id="@+id/panelJoinBack" android:layout_width="@dimen/zm_wlc_join_btn_width" android:layout_height="wrap_content" android:layout_marginTop="90dp" android:layout_above="@+id/vSignInUp" android:layout_centerHorizontal="true">
            <Button android:id="@+id/btnJoinConf" android:layout_width="match_parent" android:text="@string/zm_btn_join_a_meeting_on_welcome" style="@style/UIKitItinactivatedBtn.Large"/>
            <Button android:id="@+id/btnReturnToConf" android:visibility="gone" android:layout_width="match_parent" android:text="@string/zm_btn_return_to_conf" style="@style/UIKitItinactivatedBtn.Large"/>
        </FrameLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/vSignInUp" android:layout_width="@dimen/zm_wlc_join_btn_width" android:layout_height="wrap_content" android:layout_marginTop="60dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
            <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <Button android:gravity="center" android:id="@+id/btnSignup" android:visibility="gone" android:text="@string/zm_btn_signup_on_welcome" style="@style/ZMButton.SignIn"/>
                <Button android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/loginInternational" android:visibility="visible" android:text="@string/zm_btn_link_account_zoom_us" style="@style/ZMButton.SignIn"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <Button android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/btnLogin" android:text="@string/zm_login_to_start_conf" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/ZMButton.SignIn"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/panelConnecting" android:background="@color/zm_white" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_blue_logo" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
