<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/waitingView" android:background="@color/zm_white" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/zm_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_hint_connecting_to_share_52777"/>
            <ProgressBar android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="28dp" android:contentDescription="@string/zm_hint_connecting_to_share_52777" style="@style/ZMProgressBar.Small"/>
        </LinearLayout>
        <ImageView android:layout_gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/btnClose" android:padding="16dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_icon_close" android:contentDescription="@string/zm_btn_stop_share"/>
    </FrameLayout>
    <FrameLayout android:id="@+id/frSharingView" android:background="@color/zm_white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/zm_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_hint_sharing_screen_52777"/>
            <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/btnStopShare" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="48dp">
                <ImageView android:layout_gravity="center_horizontal" android:clickable="false" android:layout_width="75dp" android:layout_height="75dp" android:src="@drawable/zm_ic_stop_share"/>
                <TextView android:textSize="14sp" android:textColor="@color/zm_ui_kit_color_gray_8E8E93" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/zm_btn_stop_share"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
