<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:background="@drawable/zm_msg_template_content_bg" android:paddingTop="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/zm_msg_side_bar" android:background="@drawable/zm_mm_template_side_bar" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="12dp" android:layout_marginTop="3dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/template_section_linear" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.zipow.videobox.view.p014mm.MMMessageTemplateItemView android:id="@+id/zm_msg_messages" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:gravity="top" android:orientation="horizontal" android:id="@+id/zm_mm_footer_linear" android:focusable="true" android:focusableInTouchMode="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
            <ImageView android:id="@+id/zm_mm_footer_img" android:visibility="gone" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginLeft="12dp" android:layout_marginTop="4dp"/>
            <com.zipow.videobox.markdown.RoundedSpanBgTextView android:textColor="@color/zm_gray_6C6C7F" android:id="@+id/zm_mm_footer_txt" android:paddingLeft="8dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/UIKitTextView.SecondaryText.Small"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/template_section_unsupport_linear" android:paddingLeft="24dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/template_section_unsupport_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
