<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/zm_msg_template_attachments_bg" android:paddingLeft="12dp" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/img" android:layout_width="30dp" android:layout_height="40dp" android:src="@drawable/zm_mm_template_attachment_img"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="11dp">
        <TextView android:ellipsize="middle" android:id="@+id/attachments_file_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" style="@style/UIKitTextView.PrimaryText"/>
        <TextView android:ellipsize="end" android:id="@+id/attachments_file_description" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" style="@style/UIKitTextView.SecondaryText.Small.Dimmed"/>
        <TextView android:ellipsize="end" android:id="@+id/attachments_file_sub" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" style="@style/UIKitTextView.SecondaryText.Small.Dimmed"/>
    </LinearLayout>
</LinearLayout>
