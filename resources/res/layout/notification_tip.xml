<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:paddingLeft="16dp" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center_vertical" android:layout_width="@dimen/zm_height_36dp" android:layout_height="@dimen/zm_height_36dp" android:src="@drawable/zm_launcher"/>
        <LinearLayout android:orientation="vertical" android:paddingLeft="12dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textAppearance="@style/TextAppearance.Material.Notification.Title" android:textSize="@dimen/zm_ui_kit_text_size_14sp" android:id="@+id/call_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textAppearance="@style/TextAppearance.Material.Notification.Line2" android:textSize="@dimen/zm_ui_kit_text_size_13sp" android:id="@+id/call_action" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:paddingTop="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/zm_ui_kit_text_size_20sp" android:textColor="#ffffff" android:id="@+id/btnDecline" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/zm_btn_decline" android:layout_weight="0.45" style="@style/ZMButton.Red"/>
        <TextView android:layout_width="0dp" android:layout_height="30dp" android:layout_weight="0.1"/>
        <TextView android:textSize="@dimen/zm_ui_kit_text_size_20sp" android:textColor="#ffffff" android:id="@+id/btnAccept" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/zm_btn_accept" android:layout_weight="0.45" style="@style/ZMButton.Green"/>
    </LinearLayout>
</LinearLayout>
